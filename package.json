{
  "name": "leetcode-js",
  "version": "1.0.0",
  "description": "TypeScript solutions for LeetCode problems",
  "main": "dist/index.js",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "tsc --watch"
  }
}